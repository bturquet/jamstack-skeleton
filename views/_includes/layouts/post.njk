---
layout: default
---

<div class="container">
  <h1 class="center-align">{{ title }}</h1>
  <p class="center-align">Par {{ site.author.name }} â€” 
  <time class="center-align" datetime="{{ date }}">
      {{ date }}
  </time>
  </p>
  {% if featured_image %}
    <img class="responsive-img z-depth-2" src="{{ featured_image }}" alt="{{ image_caption }}">
    <figcaption class="center-align">{{ image_caption }}</figcaption>
  {% endif %}
  <div class="post-content">
      {{ content | safe }}
  </div>
  <br>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1 hoverable">
        <div class="card-content white-text">
          <span class="card-title">About the Author : {{ site.author.name }}</span>
          <p>{{ site.author.description }}</p>
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>
</div>